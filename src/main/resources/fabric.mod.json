{
  "schemaVersion": 1,
  "id": "fusions_gravity_api",
  "version": "${version}",

  "name": "Fusions Gravity API",
  "description": "Lets you change player gravity",
  "contact": {
    "issues": "https://github.com/Fusion-Flux/GravityChanger/issues",
    "sources": "https://github.com/Fusion-Flux/GravityChanger"
  },
  "authors": [
    "Gaider10",
    "Fusion Flux"
  ],
  "license": "MIT",
  "icon": "assets/fusions_gravity_api/icon.png",
  
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.fusionflux.fusions_gravity_api.GravityChangerMod"
    ],
    "client": [
      "com.fusionflux.fusions_gravity_api.ClientInit"
    ],
    "modmenu": [
      "com.fusionflux.fusions_gravity_api.ModMenuIntegration"
    ],
    "cardinal-components": [
      "com.fusionflux.fusions_gravity_api.util.GravityChangerComponents"
    ]
  },
  "mixins": [
    "fusions_gravity_api.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.19.x",
    "java": ">=17",
    "cloth-config2": "*"
  },
  "custom": {
    "cardinal-components": [
      "gravitychanger:gravity_direction"
    ],
    "lithium:options": {
      "mixin.entity.collisions": false,
      "mixin.entity.fast_suffocation_check": false
    }
  }
}
